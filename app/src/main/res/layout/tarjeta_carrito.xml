<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carritoCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iconoItemCarrito"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/laptop_asus" />

        <TextView
            android:id="@+id/itemNombreCarrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemValorCarrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemValorTotalCarrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Disponible"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/border_redondo"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMenos"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/design_default_color_primary_variant"
                    android:text="-" />

                <TextView
                    android:id="@+id/itemCantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:layout_marginVertical="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMas"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/design_default_color_primary_variant"
                    android:text="+" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>